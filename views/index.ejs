<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/home.css"> 
    <link rel="website icon" type="png" href="/img/logoEmpresa.png">

    <title>Home</title>
</head>
<body>
    <header>

        <div class="nav">
            <div class="nav-img">
                <img src="img/veneno-logo-oficial.jpeg" alt="Logo-Veneno">
            </div>
            <div class="nav-secciones">
                <a href="/">Home</a>
                <a href="/productDetail">Productos</a>
                <a href="">Armá tu outfit</a>
                <a href="">Exclusividad Clientes VIP</a>
                <a href="">Indumentaria Mundial</a>
                <a href="">Redes</a>
                <a href="">Preguntas Frecuentes</a>
            </div>
            <div class="nav-search-carrito-usuario">
                <form action="">
                    <input type="text" placeholder="Buscar">
                    <button type="submit"><i class="fa-solid fa-magnifying-glass" style="color: rgb(145, 209, 7)"></i></button>
                </form>
                <a href="/productCart"><i class="fa-solid fa-cart-plus"></i></a>
                <a href="/login"><i class="fa-solid fa-circle-user"></i></a>
            </div>
        </div>

    </header>
    <main>
        <section class="section-div-anuncios">
            <div class="div-anuncios">
                <div class="slider-frame">
                    <ul>
                        <li><img src="/img/imagen-slider.png" alt=""></li>
                        <li><img src="/img/imagen-slider.png" alt=""></li>
                        <li><img src="/img/imagen-slider.png" alt=""></li>
                        <li><img src="/img/imagen-slider.png" alt=""></li>
                    </ul>
                </div>
            </div>
        </section>
        <section class="section-hombre-mujer">
            <div class="div-hombre-mujer">
                <a href=""><img src="img/hombre.webp" alt=""></a>
                <a href=""><img src="img/mujer.webp" alt=""></a>
            </div>
        </section>
        <section class="section-opcion-prendas">
            <div class="conteiner">
                <div class="div-opcion-prendas">
                    <img src="img/remeraswebp.webp" alt="remeras">
                    <div class="div-remeras">
                        <a href="/productDetail">REMERAS</a>
                    </div>
                </div>
                <div class="div-opcion-prendas">
                    <img src="img/camperas.webp" alt="camperas">
                    <div class="div-camperas">
                        <a href="/productDetail">CAMPERAS</a>
                    </div>
                </div>
                <div class="div-opcion-prendas">
                    <img src="img/pantalon.webp" alt="jeans">
                    <div class="div-jeans">
                        <a href="/productDetail">PANTALONES</a>
                    </div>
                </div>
                <div class="div-opcion-prendas">
                    <img src="img/accesorios.jpeg" alt="accesorios">
                    <div class="div-accesorios">
                        <a href="/productDetail">ACCESORIOS</a>
                    </div>
                </div>
            </div>
        </section>
        <section class="section-articulos-en-exhibicion">
            <div class="contenedor-de-articulos">
                <% data.forEach((prenda) =>{ %>
                <article>
                    <div class="descripcion">
                        <img src="img/<%=prenda.imagen %>" alt="remeron manifest">
                        <h3 class="desc"> <%=prenda.nombre %></h3>
                        <p class="precio">$<%=prenda.precio %></p>
                        <button class="carrito"><i class="fa-solid fa-cart-plus"></i></button>
                        <a class="mas-informacion" href="/productDetail">Más información</a>
                    </div>
                </article>
                <%})%>
            </div>
        </section>
    </main>
    <footer>
        <section class="section-footer">
            <div class="div-footer">
                <div class="tarjetas">
                    <h4>Pagos</h4>
                    <img src="img/visa.png" alt="">
                    <img src="img/mastercard.png" alt="">
                    <img src="img/paypal.png" alt="">
                    <img src="img/banelco.png" alt="">
                    <img src="img/tarjeta-naranja.png" alt="">
                    <img src="img/mercadopago.png" alt="">
                    <img src="img/pagofacil.png" alt="">
                    <img src="img/rapipago.png" alt="">
                    <img src="img/oca.png" alt="">
                </div>
                <div class="atajo">
                    <h4>Menú</h4>
                    <a href="">HOME</a>
                    <a href="">PRODUCTOS</a>
                    <a href="">ARMA TU OUTFIT</a>
                    <a href="">EXCLUSIVIDAD CLIENTES VIP</a>
                    <a href="">INDUMENTARIA MUNDIAL</a>
                    <a href="">REDES</a>
                    <a href="">PREGUNTAS FRECUENTES</a>
                </div>
                <div class="sede">
                    <h4>Contactános</h4>
                    <p>ventas@venenojujuy.com.ar</p>
                    <p>Lavalle Nº154, San Salvador de Jujuy, Argentina</p>
                </div>
                <div class="seguinos">
                    <h4>Seguinos en</h4>
                    <a href=""><img src="img/facebook.png" alt=""></a>
                    <a href=""><img src="img/instagram.png" alt=""></a>
                    <a href=""><img src="img/twitter.png" alt=""></a>
                </div>
            </div>
        </section>
        <div class="div-copyrigth">
            <strong class="copyrigth">2023 Veneno | Todos los derechos reservados</strong>
        </div>
    </footer>
</body>
</html>