<!DOCTYPE html>
<html lang="es">
<head>

    <%- include('./partials/head.ejs') %>

    <link rel="stylesheet" href="/css/loginStyles.css">
    <link rel="stylesheet" href="/css/home.css">
    <title>Inicia Sesión</title>
</head>
<body>
    <header>
        <%- include('./partials/header.ejs') %>
    </header>
    <main>
        <div class="form-login">
            <h1>Inicia Sesión</h1>
            <form class="form-login" action="/users/login"  method="post">
                <div class="correo-user">
                    <label for="email">Correo electrónico </label>
                    <input type="email" id="email"  name="email" value="<%= (typeof old != 'undefined' ) ? old.email : ' ' %>">
                    <div class="div-email"></div>
                </div>
                <% if(typeof(errors) != 'undefined' && errors.email) {%>
                    <span class="text-danger">
                        <%= errors.email.msg %>
                    </span>
                <% } %>
                <div class="password">
                    <label for="password">Contraseña</label>
                    <a href="">¿Olvidaste tu contraseña?</a>
                    <input type="password" id="password" name="password">
                    <div class="div-password"></div>
                </div>
                <% if(typeof(errors) != 'undefined' && errors.password) {%>
                    <span class="text-danger">
                        <%= errors.password.msg %>
                    </span>
                <% } %>
                <div class="container-button">
                    <button>Iniciar Sesión</button>
                </div>
                <div class="enlace-registro">

                    <p>¿Eres Nuevo?</p><a href="/users/register">Registrate</a>

                </div>
            </form>
        </div>
    </main>
    
    <%- include('./partials/footer.ejs') %>
    <script src="/js/val-login.js" type="text/javascript"></script>
</body>
</html>