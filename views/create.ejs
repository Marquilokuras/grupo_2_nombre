<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head.ejs') %>
    <title>Formulario de Productos</title>
    <link rel="stylesheet" href="/css/registerStyle.css">
</head>

<body>

    <%- include('./partials/header') %>

    <main>
        <div class="form-container">
            <h2>Formulario de Creación de Productos</h2>
            <form class="form-create" action="/products" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Nombre del Producto:</label>
                    <input type="text" id="name" name="name" placeholder="Ingrese Nombre del Producto">
                    <div class="div-name"></div>
                </div>
                <div class="form-group">
                    <label for="description">Descripción:</label>
                    <textarea id="description" name="description" placeholder="Ingrese Descripción del producto"></textarea>
                    <div class="div-description"></div>
                </div>
                <div class="form-group">
                    <label for="image">Imagen del Producto:</label>
                    <input type="file" id= "image" name="image" accept="image/*">
                    <div class="div-image"></div>
                </div>
                <div class="form-group">
                    <label for="category">Categoria del Producto:</label>
                    <select id="category" name="category" placeholder="Ingrese Categoria">
                        <option value="remera" class="color-option">Remera
                        </option>
                        <option value="abrigo" class="color-option">Abrigo
                        </option>
                        <option value="pantalon" class="color-option">Pantalon
                        </option>
                        <option value="accesorio" class="color-option">Accesorio
                        </option>
                    </select>   
                </div>
                <div>
                    <label for="availability">Disponible:</label>
                    <input type="checkbox" id="availability" name="availability" value="true">
                    Si
                </div>
                <div class="form-group">
                    <label for="price">Precio del Producto:</label>
                    <input type="number" id="price" name="price" placeholder="Ingrese Precio del Producto" min="0"></textarea>
                </div>
                <div class="form-group">
                    <label for="amount">Cantidad:</label>
                    <input type="number" id="amount" name="amount" min="0" placeholder="Ingrese Cantidad" min="0">
                </div>
                <div class="form-group">
                    <label for="gender">Género:</label>
                    <select id="gender" name="gender" placeholder="Ingrese Género">
                        <option value="mujer" class="color-option">Mujer
                        </option>
                        <option value="varon" class="color-option">Varon
                        </option>
                        <option value="unisex" class="color-option">Unisex
                        </option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="offer">Oferta:</label>
                    Si
                    <input type="checkbox" id="offer" name="offer" value="true">
                    No
                    <input type="checkbox" id="offer" name="offer" value="false">
                </div>
                <div class="form-group">
                    <label for="discount">Descuento (%):</label>
                    <input type="number" id="discount" name="discount" placeholder="Ingrese Descuento" min="0" max="100">
                </div>
                <div class="form-group">
                    <button type="submit">Crear Producto</button>
                </div>
                <div class="form-group">
                    <input type="reset" value="Borrar">
                </div>
            </form>
        </div>
    </main>
    
    <%- include('./partials/footer') %>
    <script src="/js/val-create.js" type="text/javascript"></script>
</body>

</html>